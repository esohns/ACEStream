[ ! -d $LIBCOMMON_ROOT ] && echo "ERROR: libCommon project not found, aborting" && exit 1
ln -s  $LIBCOMMON_ROOT modules/libCommon
[ $? -ne 0 ] && echo "ERROR: failed to link libCommon project, aborting" && exit 1
rm -rf modules/libACEStream
